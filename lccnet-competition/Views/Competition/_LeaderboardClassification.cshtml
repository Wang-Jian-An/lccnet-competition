@model IEnumerable<lccnet_competition.Models.Leaderboard>

<div class="card mb-3">
    <div class="card-body">
        <h4>排行榜（公開榜） - 分類任務</h4>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>使用者名稱</th>
                        <th>分數</th>
                        <th>提交時間</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model ?? Enumerable.Empty<lccnet_competition.Models.Leaderboard>())
                    {
                        <tr>
                            <td>@r.Rank</td>
                            <td>@r.Username</td>
                            <td>@String.Format("{0:0.00000}", r.Score)</td>
                            <td>@r.LastSubmissionDateTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <p class="text-muted">說明：分類任務公開榜</p>
    </div>
</div>
