@model IEnumerable<lccnet_competition.Models.SubmissionRecord>

@{
    ViewData["Title"] = "Competition Submission";
}

<h1>Competition Submission</h1>

@*
    Partial view: Submission (繳交)
*@
<div class="card mb-3">
    <div class="card-body">
        <h4>繳交提交</h4>
        @if (TempData["SubmissionMessage"] != null)
        {
            <div class="alert alert-info">@TempData["SubmissionMessage"]</div>
        }

        <p>上傳 CSV 檔案，格式需包含 <code>Id</code> 與 <code>Prediction</code>。上傳後系統會回傳公開榜分數（若有）並更新排行榜。</p>

        @using (Html.BeginForm("Submit", "Competition", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mb-3" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="submissionFile" class="form-label">選擇檔案 (CSV)</label>
                <input class="form-control" type="file" id="submissionFile" name="submissionFile" accept=".csv" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">上傳並送出</button>
                <button type="button" class="btn btn-secondary" id="exampleSubmissionBtn">下載範例檔</button>
            </div>
        }

        <small class="text-muted d-block mt-2">提示：上傳前請確認檔案欄位與順序正確。</small>
    </div>
</div>

<div class="mt-4">
    <h5>歷史繳交紀錄</h5>
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>繳交時間</th>
                    <th>隊伍名稱</th>
                    <th>檔案名稱</th>
                    <th>分數</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var submission in Model)
                {
                    <tr>
                        <td>@submission.CreateDatetime</td>
                        <td>@submission.AccountId</td>
                        <td>@submission.FileName</td>
                        <td>@submission.Score</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>尚未有繳交紀錄。</p>
    }
</div>